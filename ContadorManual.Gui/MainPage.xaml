<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContadorManual.Gui.MainPage"
             Title="Contador Manual"
             BackgroundColor="LightGray">

    <Grid
        Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="0">

            <Label
                Text="Conteo:"
                FontSize="Medium"
                TextColor="Black"/>
            <Border
                Margin="0,24"
                Stroke="Gray">
                <Label
                    Text="0"
                    HorizontalOptions="Center"
                    Margin="0,24"
                    FontSize="32"
                    FontAttributes="Bold"
                    TextColor="Black"
                    x:Name="ConteoLabel"/>
            </Border>
        </VerticalStackLayout>

        <HorizontalStackLayout
            Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Center"
            Spacing="32">
            <Button
                Text="Contar"
                FontSize="Medium"
                WidthRequest="130"
                BackgroundColor="BlueViolet"
                Clicked="Button_Clicked"/>
            <Button
                Text="Reiniciar"
                FontSize="Medium"
                WidthRequest="130"
                BackgroundColor="MediumVioletRed"
                Clicked="Button_Clicked_1"/>
        </HorizontalStackLayout>

    </Grid>

</ContentPage>
